# LLM Router API Test Suite Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Your LLM Router API Key
# Get this from your LLM Router dashboard or contact your API provider
API_KEY=your-api-key-here

# Base URL for the LLM Router API
# Default: https://api.llmrouter.dev (production)
# For local testing: http://localhost:3001
BASE_URL=https://api.llmrouter.dev

# Documentation URL
# Default: https://llmrouter.dev (production docs)
DOCS_URL=https://llmrouter.dev

# =============================================================================
# TEST CONFIGURATION
# =============================================================================

# Request timeout in seconds (default: 30)
REQUEST_TIMEOUT=30

# Number of concurrent requests for load testing (default: 5)
CONCURRENT_REQUESTS=5

# Maximum tokens for chat completion tests (default: 100)
MAX_TOKENS=100

# Test model preference (default: "auto" for automatic selection)
TEST_MODEL=auto

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================

# Enable detailed response logging (true/false)
VERBOSE_LOGGING=true

# Save test results to file (true/false)
SAVE_RESULTS=true

# Results directory (relative to script location)
RESULTS_DIR=./test-results

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Skip SSL certificate verification (ONLY for testing - default: false)
# WARNING: Only set to true for local development with self-signed certificates
SKIP_SSL_VERIFY=false

# User agent for API requests
USER_AGENT=LLM-Router-Test-Suite/1.0

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Rate limiting test configuration
# Number of rapid requests to test rate limiting (default: 10)
RATE_LIMIT_REQUESTS=10

# Delay between rate limit requests in milliseconds (default: 100)
RATE_LIMIT_DELAY=100

# Health check interval for monitoring tests (default: 60 seconds)
HEALTH_CHECK_INTERVAL=60

# Performance test duration in seconds (default: 60)
PERFORMANCE_TEST_DURATION=60